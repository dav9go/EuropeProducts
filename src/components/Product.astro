---
import { Image } from 'astro:assets';
const { photo, title, shortDescription } = Astro.props;
---


<article class="p-2 py-10 lg:p-5 border border-slate-20 flex flex-col gap-2 text-center font-helveticaLight">
    <Image src={photo} alt="A bird." width="735" height="735" />
    <h3 class="text-2xl font-helveticaMedium">{title}</h3>
    <p>{shortDescription}</p>
    <p class="text-red-500">-50% <span class="line-through text-slate-700">800k vnđ</span> <span class="">400k vnđ</span></p>
</article>